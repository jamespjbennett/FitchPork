<p id="notice"><%= notice %></p>

<h1>Listing Record Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Image one</th>
      <th>Image two</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @record_reviews.each do |record_review| %>
      <tr>
        <td><%= record_review.title %></td>
        <td><%= record_review.subtitle %></td>
        <td><%= record_review.image_one %></td>
        <td><%= record_review.image_two %></td>
        <td><%= record_review.content %></td>
        <td><%= link_to 'Show', record_review %></td>
        <td><%= link_to 'Edit', edit_record_review_path(record_review) %></td>
        <td><%= link_to 'Destroy', record_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

