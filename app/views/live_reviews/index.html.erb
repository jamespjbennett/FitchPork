<p id="notice"><%= notice %></p>

<h1>Listing Live Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Image one</th>
      <th>Image two</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @live_reviews.each do |live_review| %>
      <tr>
        <td><%= live_review.title %></td>
        <td><%= live_review.subtitle %></td>
        <td><%= live_review.image_one %></td>
        <td><%= live_review.image_two %></td>
        <td><%= live_review.content %></td>
        <td><%= link_to 'Show', live_review %></td>
        <td><%= link_to 'Edit', edit_live_review_path(live_review) %></td>
        <td><%= link_to 'Destroy', live_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

