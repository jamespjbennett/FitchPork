  </div>
  <div id="article-content"> 
    <div class="row article-show-separator">
      <div class="col-md-6  article-text article-text-first">
        <p><%= @article.content%></p>
      </div>
      <div class="col-md-6 article-image-first">
        <div class="article-image-first-container col-md-12">
          <%=image_tag(@article.image_one)%>
        </div>
      </div>
    </div>
    <div class="row article-show-separator">
  <!--     <div class="col-md-6 article-image-second hidden">
